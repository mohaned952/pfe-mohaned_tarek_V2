    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "compliance:arch": "node scripts/architectureComplianceCheck.js",
    "format": "prettier --write .",
